<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme" />

    <style name="AppTheme.FullScreenDialog" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="PreferenceHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/preference_header_top</item>
        <item name="android:paddingHorizontal">@dimen/screen_edge</item>
        <item name="android:paddingBottom">@dimen/preference_header_bottom</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="PreferenceSummary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/screen_edge</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>
