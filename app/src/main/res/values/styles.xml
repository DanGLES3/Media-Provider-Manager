<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Light" />

    <style name="AboutPage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary_light</item>
    </style>

    <style name="PreferenceHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/preference_header_top</item>
        <item name="android:paddingStart">@dimen/screen_edge_margin</item>
        <item name="android:paddingEnd">@dimen/screen_edge_margin</item>
        <item name="android:paddingBottom">@dimen/preference_header_bottom</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="PreferenceSummary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/screen_edge_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>
