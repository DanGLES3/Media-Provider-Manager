<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/global_header">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:enabled="false"
            app:iconSpaceReserved="false"
            app:key="@string/reject_nonstandard_dir_key"
            app:summary="@string/reject_nonstandard_dir_summary"
            app:title="@string/reject_nonstandard_dir_title" />

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/usage_record_key"
            app:summary="@string/usage_record_summary"
            app:title="@string/usage_record_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/scoped_header">

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/template_management_key"
            app:title="@string/template_management_title" />

    </PreferenceCategory>

</PreferenceScreen>
